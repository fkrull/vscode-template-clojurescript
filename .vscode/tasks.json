{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "identifier": "npm-watch",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                {
                    "owner": "clojurescript",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(warning|error):\\s*([^[]*)\\[(\\d*),(\\d*)\\]:\\s*(.*)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    },
                    "background":{
                        "activeOnStart": false,
                        "beginsPattern": "^\\[nodemon\\] starting.*$",
                        "endsPattern": "^\\[nodemon\\] (clean exit)|(app crashed).*$"
                    }
                },
                {
                    "owner": "clojurescript",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": "^Compiling (.*)$",
                            "file": 1
                        },
                        {
                            "regexp": "^"
                        },
                        {
                            "regexp": "^Reading analysis cache for|(WARNING): (.*) at line (\\d+)",
                            "severity": 1,
                            "message": 2,
                            "line": 3,
                            "column": 0,
                            "loop": true
                        }
                    ]
                }
            ]
        }
    ]
}
